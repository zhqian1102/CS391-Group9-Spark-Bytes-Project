{
  "name": "spark-bytes",
  "version": "1.0.0",
  "description": "A platform for Boston University students and faculty to share event food and reduce waste",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest"
  },
  "keywords": [
    "food-sharing",
    "events",
    "boston-university"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.78.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/bcryptjs": "^2.4.6",
    "concurrently": "^8.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.4"
  }
}
